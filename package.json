{
  "name": "spyfu-lead-intelligence",
  "version": "1.0.0",
  "description": "SpyFu Lead Intelligence Platform - Batch CSV enhancement tool for sales leads with SEO competitive data",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=spyfu-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name spyfu-lead-intelligence",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:create": "wrangler d1 create spyfu-production",
    "db:migrate:local": "wrangler d1 migrations apply spyfu-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply spyfu-production",
    "db:seed": "wrangler d1 execute spyfu-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute spyfu-production --local",
    "db:console:prod": "wrangler d1 execute spyfu-production",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "git:push": "git push origin main"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "hono": "^4.7.12",
    "jose": "^6.1.0",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/papaparse": "^5.3.16",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "vite": "^5.4.18",
    "wrangler": "^3.102.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "spyfu",
    "lead-intelligence",
    "seo",
    "competitive-intelligence",
    "csv-enhancement",
    "cloudflare-workers",
    "hono"
  ],
  "author": "spaxton1",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaxton1/spyfu-lead-intelligence.git"
  }
}
